---
import type { CollectionEntry } from "astro:content"
import Layout from "./Layout.astro"
import BlogTitle from "../components/BlogTitle.astro"

type Props = CollectionEntry<"post">["data"]

const { title, date, cover, tags } = Astro.props
---

<Layout>
  <meta name="description" content="ヘッダテスト" />
  <article>
    <BlogTitle title={title} cover={cover} date={date} tags={tags} />
    <div class="w-full mt-4">
      <div class="prose prose-sm md:prose-base max-w-3xl mx-auto">
        <slot />
      </div>
    </div>
  </article>
</Layout>
