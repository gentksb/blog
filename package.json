{
  "name": "gensobunya-cycle-blog",
  "homepage": "https://blog.gensobunya.net/",
  "type": "module",
  "private": true,
  "version": "3.0.0",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm astro dev",
    "dev:cf": "pnpm typegen && pnpm run build && wrangler dev",
    "build": "pnpm typegen && pnpm astro build",
    "test": "pnpm typegen && vitest run",
    "lint": "biome check ./src ./functions ./test",
    "lint:fix": "biome check --write ./src ./functions ./test",
    "lint:unused": "knip",
    "format": "biome check --write . && prettier --write \"**/*.astro\"",
    "format:check": "biome check . && prettier --check \"**/*.astro\"",
    "typegen": "pnpm wrangler types"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/react": "^4.4.2",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@braintree/sanitize-url": "^7.1.1",
    "@cloudflare/pages-plugin-vercel-og": "^0.1.2",
    "@emotion/react": "^11.14.0",
    "@iconify-json/mdi": "^1.2.3",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "astro": "^5.16.6",
    "astro-auto-import": "^0.4.5",
    "astro-icon": "^1.1.5",
    "astro-pagefind": "^1.8.5",
    "aws4fetch": "^1.0.20",
    "daisyui": "^4.12.24",
    "date-fns-tz": "^3.2.0",
    "framer-motion": "^11.18.2",
    "next-share": "^0.27.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "sanitize-html": "^2.17.0",
    "swr": "^2.3.8",
    "tailwindcss": "^3.4.19",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@biomejs/biome": "^2.3.10",
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@cloudflare/workers-types": "^4.20251225.0",
    "@textlint-ja/textlint-rule-no-filler": "^1.1.0",
    "@types/node": "^20.19.27",
    "@types/sanitize-html": "^2.16.0",
    "knip": "^5.77.1",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "textlint": "^14.8.4",
    "textlint-rule-ja-no-abusage": "^3.0.0",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-no-doubled-conjunction": "^3.0.0",
    "textlint-rule-no-doubled-conjunctive-particle-ga": "^3.0.0",
    "textlint-rule-no-doubled-joshi": "^5.1.1",
    "textlint-rule-no-dropping-the-ra": "^3.0.0",
    "textlint-rule-no-hankaku-kana": "^2.0.1",
    "textlint-rule-no-mix-dearu-desumasu": "^6.0.4",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "^1.0.1",
    "textlint-rule-no-todo": "^2.0.1",
    "textlint-rule-preset-jtf-style": "^2.3.14",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "2.1.9",
    "wrangler": "^4.56.0"
  }
}
