{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "paths": {
    "@components": ["src/components/*"],
    "@layouts": ["src/layouts/*"],
    "@lib": ["src/lib/*"],
    "@images": ["src/images/*"]
  },
  "exclude": ["./funcsions/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "baseDir": ".",
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}
