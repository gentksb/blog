{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@images/*": ["src/images/*"],
      "~/*": ["src/*"],
      "@type/*": ["@types/*"]
    }
  },
  "exclude": ["./funcsions/**/*"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "baseUrl": "."
    }
  }
}
