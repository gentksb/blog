{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["node_modules", "dist", "./funcsions/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@images/*": ["src/images/*"],
      "~/*": ["src/*"],
      "@type/*": ["@types/*"]
    },
    "types": ["@cloudflare/vitest-pool-workers"]
  }
}
